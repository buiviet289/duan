<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#2196F3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phân loại quản lý"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Tab lựa chọn (Chi tiêu, Thu nhập) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#2196F3">

        <TextView
            android:id="@+id/tabChiTieu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CHI TIÊU"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:clickable="true" />

        <TextView
            android:id="@+id/tabThuNhap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="THU NHẬP"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:clickable="true" />
    </LinearLayout>

    <!-- Container cho Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />




    <!-- Nút thêm phân loại mới, đặt ở cuối màn hình -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ THÊM PHÂN LOẠI MỚI"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"

        android:padding="16dp" />
</LinearLayout>
