<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#81B9E6">

    <!-- Header Section -->
    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024-11 Số dư"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-84.730"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Spending and Income -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/spending_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiêu: -93.620"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/income_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu nhập: +8.890"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Budget Setting Section -->
    <TextView
        android:id="@+id/budget_setting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách thu chi"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <!-- Transaction List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />

    </LinearLayout>
</LinearLayout>
