<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    android:background="@drawable/darius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="#E8F5E9">

        <!-- Tên và giá -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/txt_ten"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên chi tiêu"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/txt_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1349357"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E57373" />
        </LinearLayout>

        <!-- Ghi chú -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingRight="8dp" />

            <TextView
                android:id="@+id/txt_ghichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú về chi tiêu"
                android:textSize="16sp"
                android:textColor="#616161" />
        </LinearLayout>

        <!-- Ngày chi tiêu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày:"
                android:textSize="16sp"
                android:textColor="#333333"
                android:paddingRight="8dp" />

            <TextView
                android:id="@+id/txt_ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-12-05"
                android:textSize="16sp"
                android:textColor="#2196F3" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
